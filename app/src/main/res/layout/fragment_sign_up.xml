<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dennnoukishidann.workplatform.login.SignUpFragment">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="アカウントを登録しましょう"
        android:textSize="@dimen/text_size_large"
        app:layout_heightPercent="15%" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_below="@+id/text"
        app:layout_heightPercent="15%">

        <EditText
            android:id="@+id/user_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:hint="ユーザー名"
            android:inputType="text" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout1"
        android:layout_width="match_parent"
        android:layout_below="@+id/textInputLayout"
        app:layout_heightPercent="15%">

        <EditText
            android:id="@+id/mail_address"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:hint="メールアドレス"
            android:inputType="textEmailAddress" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textInputLayout1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        app:layout_heightPercent="15%">

        <EditText
            android:id="@+id/password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:hint="パスワード(英数字)"
            android:inputType="textPassword" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textInputLayout2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        app:layout_heightPercent="15%">

        <EditText
            android:id="@+id/re_password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:hint="パスワード（上のの確認）"
            android:inputType="textPassword" />

    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:id="@+id/done"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@id/textInputLayout3"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/selector_btn"
        android:src="@drawable/baseline_done_white_48" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:background="@color/colorCleanness"
        android:enabled="true"
        android:text="キャンセル"
        android:textColor="@color/colorPrimary" />

</android.support.percent.PercentRelativeLayout>
